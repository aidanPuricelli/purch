{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "strict": true,
      "removeComments": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "declaration": true,
      "declarationDir": "types",
      "baseUrl": ".",
      "paths": {
        "purch": ["./src/index.ts"]
      }
    },
    "include": ["src", "test"],
    "exclude": ["node_modules", "dist"]
  }
  